<%= render 'navbar' %>
<h1>Add a flat</h1>
<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :price_per_night %>
  <%= f.input :number_of_guests %>
  <%= f.input :pets_allowed %>
  <%= f.submit %>
<% end %>
<br>
<%= link_to "Cancel", flats_path %>
